@model List<PageContent>
@{
    ViewBag.Title = "Content Pages";
}
@section Head{
	<script type="text/javascript" src="/scripts/jquery-1.3.2.min.js"></script>
}
<ul class="path floatContainer">
	<li class="first">@Html.ActionLink("Forums", "List", "Forums")</li>
	<li>@Html.ActionLink("Admin", "Dashboard", "Admin")</li>
</ul>
<h1>@ViewBag.Title</h1>
@if (this.Model.Count > 0)
{
<table cellpadding="0" cellspacing="0" class="admin">
	<thead>
		<tr>
			<th>Action</th>
			<th>Page Title</th>
		</tr>
	</thead>
	<tbody>
	@foreach (PageContent p in this.Model)
	{
		<tr>
			<td>@Html.ActionLink("Edit", "Edit", new{name=p.ShortName}), <a href="#" onclick="return deletePage('@(p.ShortName)');">Delete</a></td>
			<td>@Html.ActionLink(p.Title, "Detail", new{name=p.ShortName})</td>
		</tr>
	}
	</tbody>
</table>
}
