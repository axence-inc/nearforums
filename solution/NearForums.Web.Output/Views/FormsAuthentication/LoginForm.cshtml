@Html.ValidationSummary("<h3>Please check the following errors:</h3>", new Dictionary<string, object>(), null)
@using (Html.BeginForm("Login", "FormsAuthentication", new{returnUrl=ViewBag.ReturnUrl}, FormMethod.Post))
{
	<fieldset>
		<legend>
			Enter your username and password. <br />Don't have an account? @Html.ActionLink("Create one", "Register", "FormsAuthentication").
		</legend>
		<div class="formItem floatContainer">
			<label for="username">Username</label>
			@Html.TextBox("username")
		</div>
		<div class="formItem floatContainer">
			<label for="password">Password</label>
			@Html.Password("password")
		</div>
		<div class="formItem checkbox aligned">
			@Html.CheckBox("rememberMe")
			<label class="inline" for="rememberMe">Remember me</label>
		</div>
		<legend>
			@Html.ActionLink("Forgot your password?", "ResetPassword", "FormsAuthentication")
		</legend>
		<div class="formItem buttons">
			<input type="submit" class="button" value="Sign in" />
		</div>
	</fieldset>
}