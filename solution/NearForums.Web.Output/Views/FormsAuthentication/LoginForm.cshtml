@using (Html.BeginForm("Login", "FormsAuthentication", new{returnUrl=ViewBag.ReturnUrl}, FormMethod.Post))
{
	<fieldset>
		<legend>
			@T("Enter your username and password. <br />Don't have an account?") @Html.ActionLinkLocalized("Create one", "Register", "FormsAuthentication").
		</legend>
		<div class="formItem floatContainer">
			<label for="username">@T("Username")</label>
			@Html.TextBox("username")
		</div>
		<div class="formItem floatContainer">
			<label for="password">@T("Password")</label>
			@Html.Password("password")
		</div>
		<div class="formItem checkbox aligned">
			@Html.CheckBox("rememberMe")
			<label class="inline" for="rememberMe">@T("Remember me")</label>
		</div>
		<legend>
			@Html.ActionLinkLocalized("Forgot your password?", "ResetPassword", "FormsAuthentication")
		</legend>
		<div class="formItem buttons">
			<input type="submit" class="button" value="@T("Sign in")" />
		</div>
	</fieldset>
}